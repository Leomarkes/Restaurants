<h1 align="center">All Users</h1>
<div align="center">
  <%= will_paginate %>
<% @users.each do |user| %>
  <% @a = 0 %>
  <% @t = 0 %>
  <% @comentarios.each do |comentario| %>
    <% if comentario.user == user %>
      <% @a = comentario.nota + @a %>
      <% @t = @t + 1 %>
    <% end %>
  <% end %>
  <% @at = Float(@a)/Float(@t) %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li class="restaurante-title"> <%= link_to user.username, user_path(user) %></li>
        <li class="restaurante-body"><%= pluralize(user.comentarios.count, "avaliation") if user.comentarios %> </li>
        <li class="restaurante-body">MÃ©dia das notas: <%= (@at).round(2) %></li>
      </div>
    </div>
  </ul>
<% end %>
<%= will_paginate %>
</div>
